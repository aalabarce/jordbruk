{% extends '::base.html.twig' %}
    
{% block body %}
    <section id="container" >
        <header class="header black-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
            </div>
            <a href="{{ url('home') }}" class="logo"><b>Jordbruk</b></a>
            <div class="top-menu">
                <ul class="nav pull-right top-menu">
                    <li><a class="logout" href="{{ url('fos_user_security_logout') }}">Logout</a></li>
                </ul>
            </div>
        </header>

        <aside>
            <div id="sidebar"  class="nav-collapse ">
                <ul class="sidebar-menu" id="nav-accordion">
                    {% set image = 'bundles/back/images/jordbruk.jpg' %}
                    <p class="centered"><img src="{{ asset(image) }}" class="img-circle" width="60"></p>
                    <h5 class="centered">{{ app.user.nombre }} {{ app.user.apellido }}</h5>
                    <li class="mt">
                        <a id="home" href="{{ url('home') }}">
                            <span>Principal</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a id="datos">
                            <span>Mis datos</span>
                        </a>
                        <ul class="sub">
                            <li id="lote"><a href="{{ url('lote') }}">Lotes</a></li>
                            <li id="siembra"><a href="{{ url('siembra') }}">Siembras</a></li>
                            <li id="cosecha"><a href="{{ url('cosecha') }}">Cosechas</a></li>
                        </ul>
                    </li>
                    <li><a id="rna" href="#">RNA</a></li>
                </ul>
            </div>
        </aside>
        
        {% block main %}
        {% endblock %}                
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts    
        "bundles/back/js/jquery.dcjqaccordion.2.7.js"
        "bundles/back/js/jquery.scrollTo.min.js"
        "bundles/back/js/common-scripts.js"
        "bundles/back/js/Menu.js"
    %}
    <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}