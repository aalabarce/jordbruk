{% extends 'BackBundle::base.html.twig' %}


{% block main %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

    <script src="http://code.highcharts.com/4.1.8/highcharts.js"></script>
    <script src="http://code.highcharts.com/4.1.8/modules/exporting.js"></script>
    <script type="text/javascript">
        {{ chart(cultivos) }}
        {{ chart(economia) }}
        {{ chart(promedios) }}
        {{ chart(lotes) }}
    </script>

    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Reportes</h3>
            <!-- page start-->
            <div class="tab-pane" id="chartjs">
                <div class="row mt">
                    <div class="col-lg-6">
                        <div class="content-panel">
                            <h4><i class="fa fa-angle-right"></i> Reporte 1</h4>
                            <div class="panel-body text-center">
                                <div id="cultivos" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="content-panel">
                            <h4><i class="fa fa-angle-right"></i> Reporte 2</h4>
                            <div class="panel-body text-center">
                                <div id="economia" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt">
                    <div class="col-lg-6">
                        <div class="content-panel">
                            <h4><i class="fa fa-angle-right"></i> Reporte 3</h4>
                            <div class="panel-body text-center">
                                <div id="promedios" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="content-panel">
                            <h4><i class="fa fa-angle-right"></i> Reporte 4</h4>
                            <div class="panel-body text-center">
                                <div id="lotes" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>          
    </section>
{% endblock %}

