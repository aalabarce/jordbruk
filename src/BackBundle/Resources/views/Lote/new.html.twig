{% extends 'BackBundle::base.html.twig' %}

{% block main %}
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Nuevo lote</h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <form action="{{ path('lote_create') }}" method="post">                
                            {% include 'BackBundle:Lote:form.html.twig' with {'form':form } %}                
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'bundles/back/js/Zona.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}