{% extends 'BackBundle::base.html.twig' %}

{% block main %}
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Administrar Lotes</h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <a href="{{url('lote_new')}}"><i class="fa fa-plus-circle" style="color:red; float:right; font-size:50px;"></i></a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th><strong>Nombre</strong></th>
                                        <th><strong>Superficie</strong></th>
                                        <th><strong>Suelo</strong></th>
                                        <th><strong>Descripci√≥n</strong></th>
                                        <th class="col-sm-1"><strong>Acciones</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if lotes %}
                                        {% for lote in lotes|reverse %}
                                            <tr>
                                                <td>{{lote.nombre}}</td>
                                                <td>{{lote.superficie}}</td>
                                                <td>{{lote.suelo}}</td>
                                                <td>{{lote.descripcion}}</td>
                                                <td>
                                                    <a class="btn btn-primary btn-xs" href="{{url('lote_edit', { 'id': lote.id })}}"><i class="fa fa-pencil"></i></a>
                                                    <a class="btn btn-danger btn-xs" href="{{url('lote_delete', { 'id': lote.id })}}"><i class="fa fa-trash-o"></i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td>No se encontraron resultados</td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>    
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
{% endblock %}