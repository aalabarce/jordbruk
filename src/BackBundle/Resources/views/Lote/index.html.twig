{% extends 'BackBundle::base.html.twig' %}

{% block main %}
    <section id="main-content">
        <section class="wrapper">
            <a href="{{url('lote_new')}}" class="btn btn-danger">Nuevo</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <h4>Administrar Lotes</h4>
                    <thead>
                        <tr>
                            <th><strong>Nombre</strong></th>
                            <th><strong>Superficie</strong></th>
                            <th><strong>Suelo</strong></th>
                            <th><strong>Descripci√≥n</strong></th>
                            <th class="col-sm-1"><strong>Acciones</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if lotes %}
                            {% for lote in lotes %}
                                <tr>
                                    <td>{{lote.nombre}}</td>
                                    <td>{{lote.superficie}}</td>
                                    <td>{{lote.suelo}}</td>
                                    <td>{{lote.descripcion}}</td>
                                    <td>
                                        <a href="{{url('lote_edit', { 'id': lote.id })}}"><i class="fa fa-pencil"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                        <hr>
                        No se encontraron resultados
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </section>
    </section>
{% endblock %}