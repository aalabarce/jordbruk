{% extends 'BackBundle::base.html.twig' %}

{% block main %}
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> RNA</h3>
            <!-- page start-->
            <div class="tab-pane" id="chartjs">
                <div class="row mt">
                    <div class="col-lg-12">
                        <div class="form-panel">                            
                            <div class="row form-group">
                                <label class="col-sm-1 control-label">Lote</label>
                                <div class="col-sm-3">
                                    <select name="lote" id="lote" class="form-control">
                                        {% for lote in lotes %}
                                            <option value="{{lote.id}}">{{lote.nombre}}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <label class="col-sm-1 control-label">Mes</label>
                                <div class="col-sm-3">
                                    <select name="mes" id="mes" class="form-control">
                                        <option value="1">Enero</option>
                                        <option value="2">Febrero</option>
                                        <option value="3">Marzo</option>
                                        <option value="4">Abril</option>
                                        <option value="5">Mayo</option>
                                        <option value="6">Junio</option>
                                        <option value="7">Julio</option>
                                        <option value="8">Agosto</option>
                                        <option value="9">Septiembre</option>
                                        <option value="10">Octubre</option>
                                        <option value="11">Noviembre</option>
                                        <option value="12">Diciembre</option>
                                    </select>
                                </div>                          
                                <label class="col-sm-1 control-label">Rotaci√≥n de cultivos</label>
                                <div class="col-sm-3">
                                    <input type="checkbox" id="rotacion"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-md-offset-5">
                                    <a id="consultar" class="btn btn-primary">Consultar</a>
                                    <i id="loader" style="display:none" class="fa fa-cog fa-spin fa-3x fa-fw"></i>
                                </div>
                            </div>
                            <p id="respuesta"></p>
                        </div>
                    </div>
                </div>
            </div>
        </section>          
    </section>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'bundles/back/js/lodash.js'
        'bundles/back/js/handler.js'
        'bundles/back/js/RNA.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}