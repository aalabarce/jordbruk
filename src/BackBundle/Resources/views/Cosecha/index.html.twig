{% extends '::base.html.twig' %}

{% block body %}
    <section class="container list">
        <div class="new-btn actions">
            <div class="form-changes btnCLienteNuevo">
                <a href="{{url('cosecha_new')}}" class="btn btn-danger">Nuevo</a>
            </div>
        </div>
        <form type="get" action="{{ path('cosecha') }}">
            <div class="table-responsive">
                <table id="tabla-usuarios" class="table table-striped table-hover grilla-generica">
                    <h4 class="header up">Administrar Cosechas</h4>
                    <thead>
                        {% if cosechas %}
                            <tr>
                                <th><strong>Siembra</strong></th>
                                <th><strong>Fecha</strong></th>
                                <th><strong>Rinde</strong></th>
                                <th><strong>Beneficio</strong></th>
                                <th><strong>Descripcion</strong></th>
                                <th class="col-sm-1"><strong>Acciones</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for cosecha in cosechas %}
                                <tr>
                                    <td>{{cosecha.siembra}}</td>
                                    <td>{{cosecha.fecha|date('d-m-Y')}}</td>
                                    <td>{{cosecha.rinde}}</td>
                                    <td>{{cosecha.beneficio}}</td>
                                    <td>{{cosecha.descripcion}}</td>
                                    <td>
                                        <a href="{{url('cosecha_edit', { 'id': cosecha.id })}}"><i class="fa fa-pencil"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </form>
        </section>
    {% else %}
        <hr>
        {{"No se encontraron resultados"}}
    {% endif %}
{% endblock %}