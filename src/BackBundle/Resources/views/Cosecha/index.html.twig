{% extends 'BackBundle::base.html.twig' %}

{% block main %}
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i> Administrar Cosechas</h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <a href="{{url('cosecha_new')}}" class="btn btn-danger pull-right">Nuevo</a>
                            </div>
                        </div>
                        <form id="siembra_busqueda" action="{{url('cosecha')}}">
                            <div class="row form-group">
                                <div class="col-lg-3">
                                    <label>Buscar:</label>
                                    <input class="filtro form-control" value="{{busqueda}}" name="busqueda">
                                </div>
                                <div class="col-lg-2">
                                    <label>Desde:</label>
                                    <input class="filtro form-control fecha" value="{{fechaDesde}}" name="fechaDesde">
                                </div>
                                <div class="col-lg-2">
                                    <label>Hasta:</label>
                                    <input class="filtro form-control fecha" value="{{fechaHasta}}" name="fechaHasta">
                                </div>
                                <div class="col-lg-5" style="margin-top: 22px;">
                                    <button type="submit" class="btn btn-danger"><i class="fa fa-search"></i> Buscar</button>
                                    <a id="limpiar" style="margin-left: 10px;"  class="btn btn-default">Limpiar</a>
                                </div>
                            </div>
                        </form>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th><strong>Siembra</strong></th>
                                        <th><strong>Fecha</strong></th>
                                        <th><strong>Rinde</strong></th>
                                        <th><strong>Beneficio</strong></th>
                                        <th><strong>Descripcion</strong></th>
                                        <th class="col-sm-1"><strong>Acciones</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if cosechas %}
                                        {% for cosecha in cosechas|reverse %}
                                            <tr>
                                                <td>{{cosecha.siembra}}</td>
                                                <td>{{cosecha.fecha|date('d-m-Y')}}</td>
                                                <td>{{cosecha.rinde}}</td>
                                                <td>{{cosecha.beneficio}}</td>
                                                <td>{{cosecha.descripcion}}</td>
                                                <td>
                                                    <a class="btn btn-primary btn-xs" href="{{url('cosecha_edit', { 'id': cosecha.id })}}"><i class="fa fa-pencil"></i></a>
                                                    <a class="btn btn-danger btn-xs" href="{{url('cosecha_delete', { 'id': cosecha.id })}}"><i class="fa fa-trash-o"></i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td>No se encontraron resultados</td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                        </tr>                                        
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
{% endblock %}